# Agent Aura Backend - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application
ENVIRONMENT=development
DEBUG=false
VERSION=2.0.0

# Database - SQLite for development (PostgreSQL for production)
DATABASE_URL=sqlite:///./agent_aura_local.db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Security - GENERATE YOUR OWN KEYS!
# Generate with: openssl rand -hex 32
SECRET_KEY=your_secret_key_here_min_32_chars
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_chars
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
BCRYPT_ROUNDS=12

# CORS - Add your frontend URLs
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
USE_REDIS_RATE_LIMIT=false

# SSL (Set to false for local development)
SSL_ENABLED=false

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Redis (Optional for local development)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# Logging
LOG_LEVEL=INFO
LOG_FILE=agent_aura.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Monitoring (Optional - Get from https://sentry.io)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Email (Optional - For notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@agentagura.com

# API Keys - ADD YOUR OWN!
# Get Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_MONITORING=false
