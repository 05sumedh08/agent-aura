# Agent Aura Backend - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ============================================================================
# Application
# ============================================================================
ENVIRONMENT=development
DEBUG=true
VERSION=2.0.0

# ============================================================================
# Database
# ============================================================================
# Development (SQLite)
DATABASE_URL=sqlite:///./agent_aura_local.db

# Production (PostgreSQL) - Uncomment for production
# DATABASE_URL=postgresql://username:password@localhost:5432/agent_aura_prod

DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ============================================================================
# Security (CHANGE THESE IN PRODUCTION!)
# ============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=change_this_to_a_random_32_character_string_in_production
JWT_SECRET_KEY=change_this_to_another_random_32_character_string_in_production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
BCRYPT_ROUNDS=12

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_CREDENTIALS=true

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
USE_REDIS_RATE_LIMIT=false

# Redis (Optional - for production rate limiting)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# ============================================================================
# SSL/TLS (Production Only)
# ============================================================================
SSL_ENABLED=false
# SSL_CERT_PATH=/path/to/fullchain.pem
# SSL_KEY_PATH=/path/to/privkey.pem

# ============================================================================
# Server Configuration
# ============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true

# ============================================================================
# Frontend URL
# ============================================================================
FRONTEND_URL=http://localhost:3000

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=agent_aura.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ============================================================================
# API Keys (REQUIRED)
# ============================================================================
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here_optional

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_MONITORING=false

# ============================================================================
# Monitoring (Optional)
# ============================================================================
# SENTRY_DSN=your_sentry_dsn_here
# SENTRY_ENVIRONMENT=development
# SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================================================
# Email Configuration (Optional)
# ============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=noreply@yourdomain.com
